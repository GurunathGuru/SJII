<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".FacultyActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorBlue"
        android:layout_margin="5sp">

        <TextView
            android:id="@+id/faculty1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:fontFamily="@font/amiri_regular"
            android:gravity="center|start"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:paddingLeft="10sp"
            android:text="St Joseph's Indian Primary School"
            android:textColor="#FFFFFF"
            android:textSize="15dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorBlue"
        android:layout_margin="5sp">

        <TextView
            android:id="@+id/faculty2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:fontFamily="@font/amiri_regular"
            android:gravity="center|start"
            android:paddingLeft="10sp"
            android:text="St Joseph's Indian High School"
            android:clickable="true"
            android:textColor="#FFFFFF"
            android:background="?attr/selectableItemBackground"
            android:textSize="15dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorBlue"
        android:layout_margin="5sp">

        <TextView
            android:id="@+id/faculty3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:fontFamily="@font/amiri_regular"
            android:gravity="center|start"
            android:paddingLeft="10sp"
            android:text="St Joseph's Indian Composite PU College"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:textColor="#FFFFFF"
            android:textSize="15dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:id="@+id/rvFaculty"/>

</LinearLayout>